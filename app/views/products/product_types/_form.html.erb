<%= simple_form_for [:products, @product_type], wrapper: :maxwell_horizontal_form, defaults: { grid_wrapper_html: { class: 'col-sm-9' } } do |f| %>
  <div class="card">
    <div class="card-header"><%= header %></div>

    <div class="card-body">
      <legend class="form-section">
        <i class="fa fa-user"></i> <%= t('.section.basic') %>
      </legend>

      <%= f.input :name %>
      <%= f.input :description %>

    </div>

    <div class="card-footer">
      <div class="float-right">
        <%= link_to t('.cancel'), products_product_types_path, class: 'btn btn-secondary' %>
        <%= f.button :submit, t('.submit'), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>