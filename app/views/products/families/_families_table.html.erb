<div id="alert-message">
  <% if flash[:alert] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>

<table class="table table-responsive-sm table-striped table-hover table-sm table-maxwell-data">
  <thead>
    <tr>
      <th class="number-column">#</th>
      <th><%= sort_link(@q, :name, {}, remote: true) %></th>
      <th><%= sort_link(@q, :producer_id, {}, remote: true) %></th>
      <th class="action-column"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each_with_index do |c, index| %>
      <tr>
        <td><%= @families.offset_value + index + 1 %></td>
        <td><%= c.name %></td>
        <td><%= c.producer.name %></td>

        <td class="action-buttons">
          <% if can? :update, c %>
            <%= link_to edit_products_family_path(c), class: 'btn btn-sm btn-outline-primary', data: { toggle: 'tooltip', title: t('.tooltip.edit') } do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          <% end %>

          <% if can? :manage, c %>
            <%= link_to path_with_parameters(:products_family_path, c), remote: true, method: :delete, class: 'btn btn-sm btn-outline-danger', data: { toggle: 'tooltip', trigger: 'hover', title: t('.tooltip.delete'), confirm: t('.delete_confirm') } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td class="page-entries-info" colspan="4"><%= page_entries_info @families %></td>
    </tr>

    <% if @families.total_pages > 1 %>
      <tr>
        <td colspan="4">
          <%= paginate @families, remote: true %>
        </td>
      </tr>
    <% end %>
  </tfoot>
</table>
